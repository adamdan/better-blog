<% #@post.tags.build %>
<%= form_for(@post) do |post_form| %>
    <% if @post.errors.any? %>
        <div id="errorExplanation">
          <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
          <ul>
            <% @post.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div id="post-input-form">
    <div class="field">
      <%= post_form.label :name %><br />
      <%= post_form.text_field :name, :id => 'post-input-text'%>
    </div>
    <div class="field">
      <%= post_form.label :title %><br />
      <%= post_form.text_field :title, :id =>'post-input-title' %>
    </div>
    <div class="field">
      <%= post_form.label :content %><br />
      <%= post_form.text_area :content, :id => 'post-input-text_area' %>
    </div>
    <h2>Tags</h2>
    <%= render :partial => 'tags/form',
               :locals => {:form => post_form} %>
    <div class="actions">
      <%= post_form.submit %>
    </div>
        </div>
        <% end %>
