<%= form_for([@post, @post.comments.build]) do |f| %>
    <div class="field">
      <%= f.label :YourName %><br />
      <%= f.text_field :commenter, :id => "commenter_text" %>
    </div>
    <div class="field">
      <%= f.label :Comment %><br />
      <%= f.text_area :body, :id => "comment_text"%>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
